<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PSI_Food_waste</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">PSI_Food_waste</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Forms/CreatedRestaurants">Add Restaurant </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        @*<li class="nav-item text-right">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Forms/LoginScreen">Login</a>
                        </li>
                        <li class="nav-item text-right">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Forms/RegisterScreen">Register</a>
                        </li>*@
                        @*<li class="nav-item">
                            <a class="nav-link text-dark" asp-area=""  asp-route-id="1" asp-page="/Forms/Sandbox">Sandbox</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Products/Index">Products</a>
                        </li>*@
                    </ul>
                </div>
                @* to make a logout in layout, you need to create additional page, to which the button redirects
        then you make all the necessary actions in that new page*@
                @*@{
            var user = ViewData["uss"];
        }
        <h6 class="col-sm-1">Welcome @user.Username</h6>*@
                @{
                    if (ViewData["User"] != null)
                    {
                        <div class="row">
                        <form>
                            <button class="btn btn-info" asp-page="/Forms/LogoutScreen">@ViewData["User"]</button>
                        </form>
                        
                        &nbsp;
                        @* <h6 class="text-center">@ViewData["User"]</h6>*@
                        
                        &nbsp;
                        <form>
                            <button class="btn btn-danger" asp-page="/Forms/LogoutScreen">Logout</button>
                        </form>
                        </div>
                    }

                    else
                    {
                        <div class="row">
                        <form >
                            <button class="btn btn-primary" asp-page="/Forms/LoginScreen">Login</button>
                        </form>
                        &nbsp;
                        <form>
                            <button class="btn btn-primary" asp-page="/Forms/RegisterScreen">Register</button>
                        </form>
                        </div>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - PSI_Food_waste - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await Component.InvokeAsync("Notyf") 
    @RenderSection("Scripts", required: false)
</body>
</html>
