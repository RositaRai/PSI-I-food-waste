<h1>Registration</h1>
<form class="form-horizontal" method="post">
     <div class="form-group">
        <label asp-for="Email" class="col-sm-2 control-label">Email</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Email" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Username" class="col-sm-2 control-label">Username</label>
        <div class="col-sm-3">
            <input type="text" asp-for="Username" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <label asp-for="Pass" class="col-sm-2 control-label">Password</label>
        <div class="col-sm-3">
            <input type="password" asp-for="Pass" class="form-control">
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-10 col-sm-10 form-group mb-0 align-middle">
            <button type="submit" class="btn btn-primary">Register</button>
            <label style="color:red">@Model.ErrorMsg</label>
            <label style="color:green">@Model.Msg</label>
        </div>
    </div>
</form>

